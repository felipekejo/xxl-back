<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A simple, clean, and responsive HTML invoice template</title>
    
    <style>
    .invoice-box {
        /* width: 100%; */
        margin: auto;
        padding: 50px;
        font-size: 16px;
        line-height: 24px;
        font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
        color: #555;
        align-items: center;
        justify-content: center;
        display: flex;
    }
    
    .invoice-box table {
        width: 85%;
        line-height: inherit;
        text-align: left;
    }

    .invoice-box table.header {
        width: 100%;

    }
    
    .invoice-box table td {
        padding: 5px;
        vertical-align: top;
    }
    
    .invoice-box table tr td:nth-child(3) {
        text-align: right;
    }
    
    .invoice-box table tr.top table td {
        padding-bottom: 20px;
    }
    
    .invoice-box table tr.top table td.title {
        font-size: 45px;
        line-height: 45px;
        color: #333;
    }
    
    .invoice-box table tr.information table td {
        padding-bottom: 40px;
    }
    
    .invoice-box table tr.heading td {
        background: #eee;
        border-bottom: 1px solid #ddd;
        font-weight: bold;
    }
    
    .invoice-box table tr.details td {
        padding-bottom: 20px;
    }
    
    .invoice-box table tr.item td{
        border-bottom: 1px solid #eee;
    }
    

    .invoice-box table tr.total td:nth-child(3) {

        font-weight: bold;
    }
    
    @media only screen and (max-width: 600px) {
        .invoice-box table tr.top table td {
            width: 100%;
            display: block;
            text-align: center;
        }
        
        .invoice-box table tr.information table td {
            width: 100%;
            display: block;
            text-align: center;
        }
    }
    
    /** RTL **/
    .rtl {
        direction: rtl;
        font-family: Tahoma, 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
    }
    
    .rtl table {
        text-align: right;
    }
    
    /* .rtl table tr td:nth-child(3) {
        text-align: left;
    } */
    </style>
</head>

<body>
    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="3">
                    <table class="header">
                        <tr>
                            <td class="title">
                                <img src="https://github.com/felipekejo/project_images/blob/main/phone%20garage%20new%20hori.png?raw=true" style="width:200px; max-width:300px;">
                            </td>
                            <td></td>
                            <td>
                                Invoice: <%= invoiceDetails.orderNo %><br>
                                Status: <%= invoiceDetails.status %><br>
                                Order date: <%= invoiceDetails.orderDate.toLocaleString('en-AU',{ year: 'numeric', month: 'long', day: '2-digit' }) %><br>
                                Delivery date: February 1, 2021
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            
            <tr class="information">
                <td colspan="3">
                    <table>
                        <tr>
                            <td>
                               <b>Customer info</b><br>
                                Name: <%= invoiceDetails.customerName %><br>
                                Email: <%= invoiceDetails.customerEmail %><br>
                                Delivery address: <%= invoiceDetails.deliveryAddress %><br>
                            </td>
                            <td></td>
                            <td>
                            
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr class="heading">
                <td>
                    Qty
                </td>
                <td>
                    Item
                </td>
                
                <td>
                    Price
                </td>
            </tr>
            
         
                <% if (invoiceDetails.itemLines.length > 0) { %>
                    <% invoiceDetails.itemLines.forEach(product => { %>
                        <tr class="item">
                            <td><%= product.quantity %></td>
                            <td><%= product.product_name %></td>
                            <td>$<%= product.unitaryPrice %></td>
                        </tr>
                    <%  }); %>
                <% } %>

            

            
            <tr class="total">
                <td></td>
                <td></td>
                <td>
                   Total: $<%= invoiceDetails.total %>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>